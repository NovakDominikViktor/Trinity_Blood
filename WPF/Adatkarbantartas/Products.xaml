        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adatkarbantartas"
        mc:Ignorable="d"
           Title="Products" Height="702" Width="1100" WindowStartupLocation="CenterScreen" ResizeMode="CanResize" Background="#FF23B5E8">
