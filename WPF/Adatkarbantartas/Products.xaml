        <Label Content="Products" HorizontalAlignment="Left" Margin="35,611,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="White" FontFamily="Century Gothic" FontSize="36" FontWeight="Bold"/>
        <Image x:Name="ProductAdd" HorizontalAlignment="Left" Height="100" Margin="900,588,0,0" VerticalAlignment="Top" Width="100" Source="/Plus.png" MouseLeave="ProductAdd_MouseLeave" MouseLeftButtonDown="ProductAdd_MouseLeftButtonDown" MouseEnter="ProductAdd_MouseEnter"/>


